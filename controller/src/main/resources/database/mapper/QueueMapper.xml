<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.automq.rocketmq.controller.metadata.database.mapper.QueueMapper">

    <insert id="create" parameterType="Queue">
        INSERT INTO queue(topic_id, queue_id, stream_id, stream_role, group_id)
        VALUES (#{topicId}, #{queueId}, #{streamId}, #{streamRole}, #{groupId})
    </insert>

    <delete id="delete">
        DELETE FROM queue
        WHERE 1 = 1
        <if test="null != topicId">
            AND topic_id = #{topicId}
        </if>
        <if test="null != queueId">
            AND queue_id = #{queueId}
        </if>
    </delete>

    <select id="list" resultType="Queue">
        SELECT topic_id, queue_id, stream_id, stream_role, group_id
        FROM queue
        WHERE 1 = 1
        <if test="null != topicId">
            AND topic_id = #{topicId}
        </if>
        <if test="null != queueId">
            AND queue_id = #{queueId}
        </if>
        <if test="null != groupId">
            AND group_id = #{groupId}
        </if>
    </select>


</mapper>