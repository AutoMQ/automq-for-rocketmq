<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.automq.rocketmq.controller.metadata.database.mapper.BrokerMapper">
    <insert id="create" parameterType="Broker" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO broker (name, instance_id, address) VALUES (#{name}, #{instanceId}, #{address})
    </insert>

    <update id="increaseTerm" parameterType="int">
        UPDATE broker
        SET term = term + 1
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM broker WHERE id = #{id}
    </delete>

    <select id="list" resultType="Broker" >
        SELECT id, name, instance_id, address, term
        FROM broker
    </select>

    <select id="deltaList" parameterType="date" resultType="Broker">
        SELECT id, name, instance_id, address, term
        FROM broker
        WHERE update_time >= #{updateTime}
    </select>

    <select id="getByInstanceId" resultType="Broker" parameterType="string">
        SELECT id, name, instance_id, address, term
        FROM broker
        WHERE instance_id = #{instanceId}
    </select>

</mapper>