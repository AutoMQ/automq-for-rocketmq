<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.automq.rocketmq.controller.metadata.database.mapper.TopicMapper">

    <insert id="create" parameterType="Topic" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO topic(name, queue_num, status)
        VALUES (
            #{name},
            #{queueNum},
            #{status}
        )
    </insert>

    <update id="updateStatusById">
        UPDATE topic
        SET status = #{status}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE
        FROM topic
        WHERE id = #{id}
    </delete>

    <select id="getById" resultType="Topic" parameterType="long">
        SELECT id, name, queue_num, status, create_time, update_time
        FROM topic
        WHERE id = #{id}
    </select>



    <select id="list" resultType="Topic">
        SELECT id, name, queue_num, status, create_time, update_time
        FROM topic
        WHERE 1 = 1
        <if test="status != null">
            AND status = #{status}
        </if>

        <if test="updateTime != null">
            AND update_time >= #{updateTime}
        </if>
    </select>

    <select id="getByName" resultType="Topic" parameterType="string">
        SELECT id, name, queue_num, status, create_time, update_time
        FROM topic
        WHERE name = #{name}
    </select>

</mapper>